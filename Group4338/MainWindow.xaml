<Window x:Class="Group4338.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group4338"
        mc:Ignorable="d"
        Title="Инструментальные Средства Разработки Программного Обеспечения" 
        Height="700" 
        Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Студенты группы 4338"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="15px" 
                       Grid.Row="0" />

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!-- Кнопка 1 -->
                <Button Content="Кнопка 1" 
                Click="Button_Click" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="150" 
                Height="30" 
                Grid.Row="0" />

                <!-- Кнопка 2 -->
                <Button Content="Кнопка 2" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Width="150" 
                        Height="30" 
                        Grid.Row="1" />

                <!-- Кнопка 3 -->
                <Button Content="Кнопка 3" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Width="150" 
                        Height="30" 
                        Grid.Row="2" />

                <!-- Кнопка 4 -->
                <Button Content="Кнопка 4" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Width="150" 
                        Height="30" 
                        Grid.Row="3" />

                <!-- Кнопка 5 -->
                <Button Content="Кнопка 5" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Width="150" 
                        Height="30" 
                        Grid.Row="4" />

            </Grid>
        </Grid>
        
    </Grid>
</Window>